<div id="page-content">
<h1 class="text-center mt-4"> Listing All Articles </h1>
    <div class="container mt-4">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-body rounded">
                    <div class="card-header font-italic">
                        By Keaton Hutchinson
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                        <%= link_to 'View', article_path(article), class: "btn btn-outline-success" %>
                        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
                        <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-outline-danger" %>
                    </div>
                    <div class="card-footer text-muted">
                        Posted <%= time_ago_in_words(article.created_at) %> ago
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <p> <%= link_to 'Create New Article', new_article_path %> </p>
</div>